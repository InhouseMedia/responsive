@using Library.Helpers
@using Library.Resources
@{
	ViewBag.Title = Translate.ArticleName + " " + Translate.ListName;

	var grid = new WebGrid(
			source: Model,
			rowsPerPage: 200,
			canPage: true,
			canSort: true,
			defaultSort: "ChangedDate",
			sortFieldName: "ChangedDate",
			sortDirectionFieldName: "DESC"
		);
}
<h2>@ViewBag.Title</h2>
@using (Ajax.BeginForm("Change", "Article", FormMethod.Post,
					new AjaxOptions
					{
						HttpMethod = "POST",
						OnSuccess = "onSuccess",
						OnFailure = "onFailure"
					},
					new { @class = "form-horizontal", role = "form", id = "articleForm" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="table-responsive">
		@grid.GetHtml(
			tableStyle: "table table-striped table-hover",
				headerStyle: "head",
				alternatingRowStyle: "alt",
				columns: ViewBag.Columns
			)
	</div>
}
<p>
	@Html.ActionLink(@String.Format(Translate.CreateButton, Translate.ArticleName), "Create", "", null, new { @data_toggle = "modal", @data_target = "#createModalSmall", @class = "btn btn-primary" })
</p>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/roles")
}

@using System.Resources
@using Library.Resources
@model Library.Classes.ImageConfig.Sflip
@{
    Layout = null;

	// Get all translations so that we can get the ones for the visibility buttons
	var manager = new ResourceManager(typeof(Translate));

	string isActive = (Model.name == ViewData["sflip"].ToString()) ? "active" : "";
	
	var checkboxAttributes = isActive == "active" ?
			(object)new { @Name = "imageConfig.sflip", @checked = "checked" } :
			(object)new { @Name = "imageConfig.sflip" };
}

<label class="btn btn-default @isActive">
	@Html.RadioButtonFor(m => m.value, Model.name, checkboxAttributes) @manager.GetString("sflip_" + Model.name)
</label>

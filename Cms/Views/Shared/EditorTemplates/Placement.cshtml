@using System.Resources
@using Library.Resources
@model Library.Classes.ImageConfig.Placement
@{
    Layout = null;

	// Get all translations so that we can get the ones for the visibility buttons
	var manager = new ResourceManager(typeof(Translate));

	string isActive = (Model.value.Equals(true)) ? "active" : "";
}

<label class="btn btn-default @isActive">
	@Html.RadioButtonFor(m => m.value, Model.name, new { @Name = "imageConfig.placement"}) @manager.GetString(Model.name)
</label>

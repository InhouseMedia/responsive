@using Library.Models
@using Library.Helpers
@using Library.Resources
@model LoginViewModel
@{
	Layout = "~/Views/Shared/_Clean.cshtml";
    ViewBag.Title = @Translate.Login;
}

<h2>@ViewBag.Title.</h2>
<div class="row">
	<hr />
    <div class="col-md-4">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                <h4>@Translate.LoginInfo</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
				
				@Html.BootstrapEditorFor(m => m.Email, new { @autoFocus = true })
				
				@Html.BootstrapEditorFor(m => m.Password)

                <div class="form-group">
                    <div class="col-md-7">
                        <div class="checkbox">
							<label>
								@Html.CheckBoxFor(m => m.RememberMe)
								@Html.DisplayNameFor(m => m.RememberMe)
							</label>
                        </div>
                    </div>
					<div class="col-md-5">
						<button type="submit" class="btn btn-primary btn-block" >@Translate.Login</button>
					</div>
                </div>
                <p>
                    @Html.ActionLink(Translate.ForgotPassword, "ForgotPassword", "", null, new { @data_toggle = "modal", @data_target = "#forgotModalSmall" })
				</p>
            }
        </section>
    </div>
	<div class="col-md-8"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
